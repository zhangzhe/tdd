<h1>Shows List</h1>

<table>

  <thead>
    <tr>
      <th>Show Name</th>
      <th>Show Picture URL</th>
      <th>popularity</th>
      <th>Function</th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%=show.name%></td>
        <td><%=show.picture%></td>
        <td>liked(<span id="liked_count_<%= show.id %>"><%= show.liked_count %></span>)
          unliked(<span id="unliked_count_<%= show.id %>"><%= show.unliked_count %></span>)</td>
        <td><%= link_to "like", like_show_path(show), :id => "like_#{show.id}", :method => "post" %>
        <%= link_to "unlike", unlike_show_path(show), :id => "unlike_#{show.id}", :method => "post" %></span></td>
      </tr>
    <% end %>
  </tbody>

</table>

<a href="/shows/new">New Show</a>